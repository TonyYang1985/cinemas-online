# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Node Environment (development, production, test)
NODE_ENV=development

# Database Configuration
# MariaDB/MySQL connection URL (overrides cfg/database.yml)
DATABASE_URL=mysql://username:password@localhost:3306/database_name

# Redis Configuration
# Redis connection URL (overrides cfg/redis.yml)
REDIS_URL=redis://localhost:6379/4

# RabbitMQ Configuration
# RabbitMQ connection URL (overrides cfg/rabbitmq.yml)
RABBITMQ_URL=amqp://username:password@localhost:5672/

# Application Configuration
# Port to run the application on (overrides cfg/application.yml)
PORT=3000

# JWT Keys
# Paths to RSA keys for JWT token signing/verification
PRIVATE_KEY_PATH=./keys/privateKey.pem
PUBLIC_KEY_PATH=./keys/publicKey.pem

# API Gateway Configuration (optional)
ENABLE_API_GATEWAY=false
API_GATEWAY_HOST_PORT=localhost:80
DOMAINS=example.com,*.example.com

# Logging Configuration
# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=debug
