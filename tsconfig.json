{
  "compilerOptions": {
    "outDir": "temp",
    "target": "ES2021",
    "module": "CommonJS",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,  // ✨ 新增：更好的模块导入
    "declaration": true,
    "declarationMap": true,                // ✨ 新增：声明文件的 source map
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, // ✨ 新增：强制文件名大小写一致
    "lib": ["ES2021"],
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "example/**/*",
    "tools/**/*" 
  ],
  "exclude": [
    "node_modules",
    "temp",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}